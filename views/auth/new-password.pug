extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/auth.css")
  link(rel="stylesheet", href="/css/forms.css")

block content
  - var token = csrfToken
  - var id = userId
  - var rstToken = resetToken
  if errorMessage
    .user-message.user-message--error #{errorMessage}
  form.login-form(action="/new-password", method="POST")
    .form-control
        label(for="password") Password
        input(type="password", name="password")#password
    button.btn(type="submit") Change Password
    input(type="hidden", name="_csrf", value=token)
    input(type="hidden", name="userId", value=id)
    input(type="hidden", name="resetToken", value=rstToken)

