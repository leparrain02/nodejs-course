extends ../layouts/main-layout.pug 

block styles
  link(rel="stylesheet", href="/css/orders.css")

block content
  if orders.length > 0
    h1 Your orders
    ul.orders
      for order in orders
        - var orderId = order._id
        li.orders__item
          h2 Orders - # #{order._id} 
            a(href='/order/' + orderId) Invoice
          ul.orders__products
            for p in order.products
              li.orders__products-item #{p.product.title} quantity: #{p.quantity}
  else
    h1 You have no order