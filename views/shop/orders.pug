extends ../layouts/main-layout.pug 

block styles
  link(rel="stylesheet", href="/css/product.css")

block content
  if orders.length > 0
    h1 Your orders
    ul
      for order in orders
        li
          h2 # #{order._id}
          ul
            for product in order.items
              p #{product.title} quantity: #{product.quantity}
  else
    h1 You have no order