extends ../layouts/main-layout.pug 

block styles
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/product.css")

block content
  - var title = (editing ? product.title : '')
  - var imageUrl = (editing ? product.imageUrl : '')
  - var price = (editing ? product.price : '')
  - var action = (editing ? '/admin/edit-product' : '/admin/add-product')
  form.product-form(action=action, method="POST")
    .form-control
      label(for="title") Title
      input(type="text", name="title" value=title)#title
    .form-control
      label(for="imageURL") Image URL
      input(type="text", name="imageUrl" value=imageUrl)#imageUrl
    .form-control
      label(for="price") Price
      input(type="number", step="0.01" name="price" value=price)#price
    .form-control
      label(for="description") Description
      textarea(name="description", rows="5")#description #{editing ? product.description : ''}
    if editing
      - var id = product._id
      .form-control
        input(type="hidden", value=id, name="productId")
    button.btn(type="submit") #{editing ? 'Update Product' : 'Add Product'}
    